{
  "name": "esbuild-learning",
  "version": "1.0.0",
  "type": "module",
  "description": "学习 esbuild 构建工具的示例项目",
  "main": "dist/index.js",
  "scripts": {
    "build": "esbuild src/index.js --bundle --outfile=dist/bundle.js",
    "build:min": "esbuild src/index.js --bundle --minify --outfile=dist/bundle.min.js",
    "build:watch": "esbuild src/index.js --bundle --outfile=dist/bundle.js --watch",
    "build:ts": "esbuild src/app.ts --bundle --outfile=dist/app.js",
    "build:react": "esbuild src/react-app.jsx --bundle --outfile=dist/react-app.js",
    "build:css": "esbuild src/css-demo.js --bundle --outfile=dist/css-demo.js",
    "serve": "esbuild src/index.js --bundle --outfile=dist/bundle.js --serve=8000",
    "dev": "esbuild src/index.js --bundle --outfile=dist/bundle.js --watch --serve=8000",
    "dev-server": "node dev-server.js",
    "build:plugins": "node build-with-plugins.js",
    "config:demo": "node config-demo.js",
    "config:basic": "node config-demo.js basic",
    "config:entry": "node config-demo.js entry",
    "config:platform": "node config-demo.js platform",
    "config:loaders": "node config-demo.js loaders",
    "config:env": "node config-demo.js env",
    "config:transform": "node config-demo.js transform",
    "config:watch": "node config-demo.js watch",
    "api:examples": "node API_EXAMPLES.js",
    "api:basic": "node API_EXAMPLES.js basic",
    "api:transform": "node API_EXAMPLES.js transform",
    "api:advanced": "node API_EXAMPLES.js advanced",
    "api:batch": "node API_EXAMPLES.js batch",
    "benchmark": "node performance-benchmark.js",
    "build:advanced": "node advanced-config.js",
    "learn": "node learn-by-experiment.js",
    "learn:1": "node learn-by-experiment.js 1",
    "learn:2": "node learn-by-experiment.js 2",
    "learn:3": "node learn-by-experiment.js 3",
    "learn:4": "node learn-by-experiment.js 4",
    "learn:5": "node learn-by-experiment.js 5",
    "babel:demo": "node babel-integration-demo.js",
    "babel:1": "node babel-integration-demo.js 1",
    "babel:2": "node babel-integration-demo.js 2",
    "babel:3": "node babel-integration-demo.js 3",
    "babel:4": "node babel-integration-demo.js 4",
    "babel:perf": "node babel-integration-demo.js perf"
  },
  "devDependencies": {
    "esbuild": "^0.19.5",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "typescript": "^5.2.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
